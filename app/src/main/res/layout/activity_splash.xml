<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F7FF"
    tools:context="com.example.osteoporosis_detection.SplashActivity">

    <!-- Center container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <!-- First Line -->
        <TextView
            android:id="@+id/firstLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BEYOND CONVENTIONAL CARE"
            android:textColor="#006666"
            android:textSize="16sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif" />

        <!-- Second Line -->
        <TextView
            android:id="@+id/secondLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Insight to Osteo Vision"
            android:textColor="#333333"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="sans-serif" />

        <!-- Tag Line -->
        <TextView
            android:id="@+id/tagLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="simplified process, exact outcomes, empower your life."
            android:textColor="#666666"
            android:textSize="14sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif" />

        <!-- App Logo -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/doctor" />

        <!-- Start Diagnosis Button -->
        <Button
            android:id="@+id/startDiagnosisButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Start Diagnosis"
            android:textColor="#FFFFFF"
            android:backgroundTint="#006666"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:fontFamily="sans-serif" />
    </LinearLayout>
</RelativeLayout>