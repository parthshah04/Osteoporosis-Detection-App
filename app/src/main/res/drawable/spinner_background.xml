<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" />
                    <corners android:radius="4dp" />
                    <stroke android:width="1dp" android:color="#CCCCCC" />
                </shape>
            </item>
            <item android:gravity="end|center_vertical" android:right="8dp">
                <layer-list>
                    <item android:width="12dp" android:height="12dp" android:gravity="center">
                        <rotate android:fromDegrees="45" android:toDegrees="45">
                            <shape android:shape="rectangle">
                                <solid android:color="#666666" />
                                <size android:width="2dp" android:height="12dp" />
                            </shape>
                        </rotate>
                    </item>
                    <item android:width="12dp" android:height="12dp" android:left="5dp" android:gravity="center">
                        <rotate android:fromDegrees="-45" android:toDegrees="-45">
                            <shape android:shape="rectangle">
                                <solid android:color="#666666" />
                                <size android:width="2dp" android:height="12dp" />
                            </shape>
                        </rotate>
                    </item>
                </layer-list>
            </item>
        </layer-list>
    </item>
</selector>