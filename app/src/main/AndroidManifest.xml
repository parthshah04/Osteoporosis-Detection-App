<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/doctor"
        android:label="@string/osteo_vision"
        android:roundIcon="@drawable/doctor"
        android:supportsRtl="true"
        android:theme="@style/Theme.OsteoporosisDetection"
        tools:targetApi="31">
        <activity
            android:name=".EditPatientActivity"
            android:exported="false"
            android:parentActivityName=".TabularActivity"/>
        <!-- Splash Activity as Launcher Activity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.OsteoporosisDetection.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.OsteoporosisDetection.NoActionBar" /> <!-- Starting Activity -->
        <activity
            android:name=".StartingActivity"
            android:exported="false"
            android:theme="@style/Theme.OsteoporosisDetection.NoActionBar" /> <!-- Main Activity as Parent Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/registration"
            android:parentActivityName=".StartingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartingActivity" />
        </activity> <!-- Tabular Activity -->
        <activity
            android:name=".TabularActivity"
            android:exported="false"
            android:label="@string/patients"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity> <!-- Profile Activity -->
        <activity
            android:name=".Profile"
            android:exported="false"
            android:parentActivityName=".StartingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartingActivity" />
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:label="@string/profile"
            android:parentActivityName=".StartingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartingActivity" />
        </activity> <!-- Visualisation Activity -->
        <activity
            android:name=".Visualisation"
            android:exported="false"
            android:label="@string/visualisation"
            android:parentActivityName=".StartingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartingActivity" />
        </activity> <!-- Instruction Activity -->
        <activity
            android:name=".InstructionActivity"
            android:exported="true"
            android:label="@string/instructions"
            android:parentActivityName=".AboutActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AboutActivity" />
        </activity> <!-- About Activity -->
        <activity
            android:name=".AboutActivity"
            android:exported="true"
            android:label="@string/about"
            android:theme="@style/Theme.OsteoporosisDetection.NoActionBar"
            android:parentActivityName=".StartingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartingActivity" />
        </activity> <!-- Settings Activity -->
        <activity
            android:name=".SettingsActivity"
            android:exported="true"
            android:label="@string/settings"
            android:theme="@style/Theme.OsteoporosisDetection.NoActionBar"
            android:parentActivityName=".StartingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartingActivity" />
        </activity>
        <activity
            android:name=".UpdateUserDetailsActivity"
            android:exported="true" />
        <activity
            android:name=".DeleteUserActivity"
            android:exported="true" />
    </application>

</manifest>