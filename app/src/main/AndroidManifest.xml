<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/doctor"
        android:label="@string/app_name"
        android:roundIcon="@drawable/doctor"
        android:supportsRtl="true"
        android:theme="@style/Theme.OsteoporosisDetection"
        tools:targetApi="31">
        <activity
            android:name=".TabularActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <!-- Profile Activity -->
        <activity
            android:name=".Profile"
            android:exported="false"
            android:parentActivityName=".StartingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartingActivity" />
        </activity> <!-- Visualisation Activity -->
        <activity
            android:name=".Visualisation"
            android:exported="false"
            android:parentActivityName=".StartingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartingActivity" />
        </activity> <!-- Splash Activity as Launcher Activity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Login Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="false" /> <!-- Main Activity as Parent Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:parentActivityName=".StartingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartingActivity" />
        </activity> <!-- Starting Activity -->
        <activity
            android:name=".StartingActivity"
            android:exported="false" />
    </application>

</manifest>